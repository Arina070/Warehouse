@using Warehouse.Data;
@using Warehouse.Services;

@inject StockRepository stockRepository;
@inject RefreshService refreshService;

<div class="shadow p-3 mb-3 border-primary border-5 border-start">
    <div class="row">
        <div class="col-12">
            <div class="h4 font-weight-bold text-primary text-uppercase mb-1">
                @Item.Name
            </div>
        </div>
    </div>
    <div class="row justify-content-end">
        <div class="col-sm-6 col-lg-2 col-xl-4 col-xxl-2">
            <div>
                <span class="h5 text-muted">Price:</span>
                <span class="h2 font-weight-bold">UAH @Item.Price/@Item.SellPrice</span>
            </div>
        </div>
        <div class="col-sm-3 col-lg-2 col-xl-3 col-xxl-2">
            <span class="h5 text-muted">Count:</span>
            <span class="h2 font-weight-bold">@Item.Count</span>
        </div>
        <div class="p-2 col-sm-3 col-xxl-2 col-xl-4">
            <div class="row g-2">
                <div class="col">
                    <a class="btn btn-secondary text-uppercase p-2 w-100" href="stocknew/@Item.Id">Buy</a>
                </div>
                <div class="col">
                    <a class="btn btn-primary text-uppercase p-2 w-100" href="sell/@Item.Id">Sell</a>
                </div>
                <div class="col">
                    <a class="btn btn-danger text-uppercase p-2 w-100" @onclick="@(()=> Delete(@Item.Id))">Delete</a>
                </div>
            </div>
        </div>
    </div>
</div>
